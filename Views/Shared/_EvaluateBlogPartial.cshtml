@model AvaliacaoBlogViewModel

<style>
    .star-rating-container {
        text-align: center;
    }

    .star-rating {
        display: inline-flex;
        flex-direction: row-reverse; 
        justify-content: center;
    }

        .star-rating input[type="radio"] {
            display: none;
        }

        .star-rating label {
            font-size: 2.5rem;
            color: #ddd;
            cursor: pointer;
            transition: color 0.2s;
        }

        .star-rating:not(:hover) input[type="radio"]:checked ~ label,
        .star-rating:hover input[type="radio"] ~ label:hover ~ label,
        .star-rating:hover input[type="radio"] ~ label:hover {
            color: #ffc107;
        }
</style>

<div class="modal fade" id="evaluateModal" tabindex="-1" aria-labelledby="evaluateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form id="formAvaliacao" asp-controller="Blog" asp-action="EvaluateBlog" method="post">
                <input type="hidden" asp-for="BlogId" />

                <div class="modal-header border-0">
                    <h5 class="modal-title w-100 text-center fs-4" id="evaluateModalLabel">Qual sua nota para o blog?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body text-center pb-4">
                    <p class="mb-4 fs-5"><strong>@Model.NomeBlog</strong></p>

                    <div class="star-rating-container">
                        <div class="star-rating">
                            <input type="radio" id="star5" asp-for="Nota" value="5" /><label for="star5" title="5 estrelas"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star4" asp-for="Nota" value="4" /><label for="star4" title="4 estrelas"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star3" asp-for="Nota" value="3" /><label for="star3" title="3 estrelas"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star2" asp-for="Nota" value="2" /><label for="star2" title="2 estrelas"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star1" asp-for="Nota" value="1" /><label for="star1" title="1 estrela"><i class="fa-solid fa-star"></i></label>
                            <input type="radio" id="star0" asp-for="Nota" value="0" /><label for="star0" title="0 estrelas"><i class="fa-regular fa-star"></i></label>
                        </div>
                        <span asp-validation-for="Nota" class="text-danger d-block mt-2"></span>

                        <div id="rating-feedback" class="mt-3" style="height: 24px;"></div>
                    </div>
                </div>

                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Avaliação</button>
                </div>
            </form>
        </div>
    </div>
</div>