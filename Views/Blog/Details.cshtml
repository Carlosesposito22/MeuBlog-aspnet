@model BlogDetailsViewModel

<div class="container my-4">

    <header class="p-5 mb-4 rounded-3 blog-header position-relative" style="background-color: #f8f9fa">

        @if (Model.IsUserAdmin)
        {
            <a asp-action="EditBlog" asp-route-id="@Model.BlogId" class="btn btn-primary position-absolute top-0 end-0 m-3">
                <i class="fa-solid fa-pencil me-2"></i>Editar Blog
            </a>
        }

        <div class="container-fluid py-4 text-center">
            <h1 class="display-4 fw-bold">@Model.Nome</h1>
            <p class="fs-5 col-md-10 mx-auto">@Model.Descricao</p>
            <p class="text-muted">Criado em: @Model.Criacao.ToString("dd/MM/yyyy")</p>
        </div>

        <div class="d-flex justify-content-center align-items-center gap-5 border-top pt-4">
            <div class="stat-item d-flex align-items-center gap-2 text-muted" style="font-size: 1.5rem">
                <i class="fa-solid fa-star text-warning"></i>
                <span class="fs-5 fw-semibold">@Model.MediaDeAvaliacao.ToString("0.0")</span>
            </div>
            <div class="stat-item d-flex align-items-center gap-2 text-muted" style="font-size: 1.5rem">
                <i class="fa-solid fa-users text-info"></i>
                <span class="fs-5 fw-semibold">@Model.QuantidadeInscritos Inscritos</span>
            </div>
            <button type="button" class="btn btn-success js-open-evaluate-modal" data-blog-id="@Model.BlogId">
                <i class="fa-solid fa-pen-to-square me-2"></i>Avaliar Blog
            </button>
        </div>
    </header>

</div>

<div id="modal-placeholder"></div>

@section Scripts {
    <script src="~/js/evaluateModal.js"></script>
}
